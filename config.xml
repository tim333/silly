<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.timspear.bars"
        version   = "1.0">

    <!-- versionCode removed for ios-->

    <name>Bars App for iOS</name>

    <description>
        iOS version
    </description>


    <name>Late Bars London</name>
	
<platform name="ios">
              <!-- iOS 7.0+ -->
              <!-- iPhone / iPod Touch  -->
              <icon src="icon-60.png" width="60" height="60" />
              <icon src="icon-60@2x.png" width="120" height="120" />
              <!-- iPad -->
              <icon src="icon-76.png" width="76" height="76" />
              <icon src="icon-76@2x.png" width="152" height="152" />
              
              <icon src="icon.png" width="57" height="57" />
               
     </platform>
    
    <description>
        Showing where you can get a drink after 11.
    </description>
    
    <author href="https://build.phonegap.com" email="latebarsapp@gmail.com">
        Tim Spear
    </author>
    
	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	
	<gap:plugin name="org.apache.cordova.core.geolocation" />

  <plugin name="cordova-plugin-inappbrowser"   source="npm" spec="1.0.1" />

  <feature name="InAppBrowser">
    <param name="ios-package" value="CDVInAppBrowser" />
  </feature>
	
	<plugin name="InAppBrowser" value="CDVInAppBrowser" />
	
	
	<preference name="orientation" value="portrait" />
	
	<access origin="http://googleapis.com" subdomains="true" />
	<access origin="https://google-maps-utility-library-v3.googlecode.com" subdomains="true" />
	<access origin="http://gstatic.com" subdomains="true" />
	<access origin="http://googleusercontent.com" subdomains="true" />
	<access origin="http://127.0.0.1*" />
	<access origin="http://phonegap.com" subdomains="true" />
	
</widget>
